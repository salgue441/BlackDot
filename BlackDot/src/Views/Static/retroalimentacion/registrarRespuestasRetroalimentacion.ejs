<html>
  <%- include('../../partials/header.ejs') %>

  <body>
    <%- include('../../partials/navBar.ejs') %>

    <%- include('../../partials/sidebarAdmin.ejs') %>

    <div class="mainContainer">
      <section class="container">

          
            <h1 class="title is-1"> Responder retroalimentacion</h1>

        <form class="preguntaContainer" method="POST" action="/actual/enviado">
          <% let cantCualitativas = 0; %> <% for (let i = 0; i < preguntas.length;
          i++) { %> <% if(preguntas[i].contenido != '¿Que podemos mejorar?') { %>
          <% if (preguntas[i].tipoPregunta === 'Cualitativa') { %> 
          <div class="box is-flex is-flex-direction-column is-align-self-center">
            <label class="label " for="respuestaCualitativa"
              ><%= preguntas[i].contenido %></label
            >
            <input
              class="input m-3 is-justify-content-center is-align-self-center"
              type="text"
              id="respuestaCualitativa"
              name="<%= preguntas[i].idPregunta %>"
              placeholder="Respuesta"
              required
            />
          </div>
          <% } else { %>
          <div class="box is-flex is-flex-direction-column is-vcentered">
            <label class="label" for="respuestaCuantitativa"
              ><%= preguntas[i].contenido %></label
            >
            <%- include('../../partials/preguntaCuantitativa.ejs', {name:preguntas[i].idPregunta }) %>
          </div>
          <%} } } %>
  
          <div class="box is-flex is-flex-direction-column">
            <label class="label" for="respuestaCualitativa"
              >¿Que podemos mejorar?</label
            >
            <p class="is-italic  accionableText">Esta respuesta puede volverse un task en Jira</p>
            <input
              class="input m-3 is-justify-content-center is-align-self-center"
              type="text"
              id="respuestaCualitativa"
              name="8"
              placeholder="Respuesta"
  
              required
            />
          </div>
  
          <div class="is-flex is-justify-content-center ">
            <input
              class="button is-danger is-rounded is-medium mb-6"
              type="submit"
              value="Enviar"
            />
          </div>
        </form>
      </section>
    </div>
    
  </body>
</html>

