<html>
  <%- include('../../partials/header.ejs') %>

  <body>
    <%- include('../../partials/navBar.ejs') %> 
  <%- include('../../partials/sidebarAdmin.ejs') %>

    <div class="mainContainer"> <section class="section " >
    <div class="columns is-vcentered">
      <div class="column">
        <h1 class="title is-1 mb-4">Accionables</h1>
      </div>
      <div class="column is-narrow">
        <a
          href="/historico/historicoAccionables"
          class="button is-danger reporte-button"
          onclick="event.preventDefault(); saveAccionables();"
        >
          Aprobar Accionables
        </a>
      </div>
    </div>

    <section class="columns is-multiline is-3 is-variable">
      <% for (let i = 0; i < accionables.length; i++) { %>
      <div class="box column is-one-quarter mr-5 ml-5 p-5">
        <div class="mb-4">
          <p class="title is-4 mb-1">Contenido:</p>
          <p class="is-size-5"><%= accionables[i].nombreAccionable %></p>
          <div class=" is-flex mt-4 ">
            <p class="title mb-3 mr-2 is-5 mt-1">Prioridad:</p>
            <span class="button is-warning is-small noHover "><%= accionables[i].prioridadAccionable %></span>
          </div>
           
        </div>
        <div class="column checkboxDiv is-flex is-justify-content-center is-align-self-flex-end">
          <div class="content">
            <!-- Toggle box -->
            <div class="accionable-toggle ">
              <figure class="image is-24x24">
                <input
                  type="checkbox"
                  name="accionable"
                  class="checkbox"
                  onclick="handleCheckBox('<%= accionables[i].idAccionable %>')"
                  id="checkbox-<%= accionables[i].idAccionable %>"
                />
  
                <input
                  type="hidden"
                  id="selected-accionables"
                  name="accionable"
                  class="checkbox"
                />
              </figure>
            </div>
            <!-- End of Toggle box -->
          </div>
        </div>
      </div>
    
      <% } %>
    </section>
    
  </div>
  </body>


  <script src="/js/accionable.front.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

  <style>

  .noHover {
    pointer-events: none;
  }    

.columns.is-variable {
  --column-gap: 2rem;
}

.button {
  padding: 0.3rem;
 
}

    hr {
      opacity: 0;
      margin: 1rem;
    }

    ::-webkit-scrollbar {
      width: 0;
      height: 0;
      background-color: transparent;
    }

    .mainContainer {
      width: 85%;
      margin-left: 15%;
      height: 92%;
      margin-top: 6%;

      padding: 0px;
    }
    .nombreAccionable {
      display: flex !important;
      align-items: center !important;
    }

    .checkboxDiv {
      display: flex;
      align-items: center;
      justify-content: flex-end;
    }

    .checkbox {
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 40px;
      width: 40px;
      transform: translate(-18%, -20%);
      appearance: none;
      outline: none;
      border: 2px solid #000;
      border-radius: 4px;
    }

    .box {
    gap: 0.5rem;

    min-height: 10rem;
   
   

    border: 1px solid #dbdbdb;


  }

    .checkbox::before {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      height: 20px;
      width: 20px;
      background-color: #000;
      border-radius: 2px;
      opacity: 0;
      transition: opacity 0.2s ease-in-out;
    }

    .checkbox:checked::before {
      opacity: 1;
    }
  </style>
</html>
