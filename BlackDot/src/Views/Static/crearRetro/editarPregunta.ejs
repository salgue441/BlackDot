    padding-left: 3rem;
  }

  .title {
    color: #e3e1dd !important;
  }

  .label {
    color: #e3e1dd !important;
   
  }

  .subtitle {
    color: #e3e1dd !important;
  }


  p {
    color: #e3e1dd !important;
  }



  body {
    background-color: #181a1b;
    color: #e3e1dd !important;
  }

  section {
    background-color: #181a1b;
  }


  .mainContainer {
    width: 85%;
    margin-left: 15%;
    height: 92%;

    padding-top: 4% !important;
  }
  .container {
    width: 65%;
  }

  .textInput {
    width: 80%;
  }

  .guardar {
    background-color: #356959;
    color: white;
  }

  .guardar:hover {
    color: white;
