<html>
  <%- include('../../partials/header.ejs') %>

  <body>
    <%- include('../../partials/navBar.ejs') %> <%-
    include('../../partials/sideBarAdmin.ejs') %>

    <div class="mainContainer">
      <section class="hero is-medium is-bold">
        <div class="hero-body has-text-centered">
          <div class="container">
            <h1 class="title is-1">
              'CREANDO MARCAS <br />
              PARA EL FUTURO'
            </h1>

            <br />

            <% if(retroActiva) { %>
            <button class="button is-success status-button noHover">
              Retro Activa
            </button>
            <% } else { %>
            <button class="button is-danger status-button noHover">
              Retro Inactiva
            </button>
            <% } %>
          </div>
        </div>
      </section>

      <section class="section">
        <!-- Graph  -->
        <% if (sprint.length > 0) { %>
        <div class="container is-fluid">
          <div class="box has-text-centered sprint-graph box-shadow--2">
            <div class="sprint-title">
              <p class="subtitle is-2 is-white">Epicas</p>
              <br />
            </div>
            <canvas
              id="Sprints"
              style="width: 100%; height: calc(100% - 100px)"
            ></canvas>
          </div>
        </div>

        <% } else { %>
        <div class="container">
          <div class="graphContainer box has-text-centered has-shadow--2">
            <p class="subtitle is-4">No hay Sprints disponibles</p>
          </div>
        </div>
        <% } %>
      </section>
    </div>

    <script src="/js/sprint.chart.js"></script>
  </body>
</html>

