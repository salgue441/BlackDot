<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>REPORT</title>
    <style>
      body{
        font-family: monospace;
        font-size: 12px;
        margin: 0;
        padding: 0;
      }
      .header {
        justify-content: space-between;
        display: flex;
        flex-direction: column;
      }
      .title {
        display: flex;
        text-align: center;
      }

      .footer {
        text-align: right;
      }

      .left {
        float: left;
      }

      .right {
        float: right;
      }

      footer {
        margin-right: 20px;
        margin-bottom: 0%;
      }

      .graph {
        margin: 0 auto;
        align-items: center;
      }
    </style>
  </head>
  <body>
    <!-- header -->
    <div class="header">
      <div class="left">
        <p><%= new Date().toLocaleDateString() %></p>
      </div>
      <div class="right">
        <img
          src="/assets/$zebrands-brand-logo.svg"
          alt="logo"
          width="100"
          height="100"
        />
      </div>
    </div>
    <div class="title">
      <h1><%= title %></h1>
    </div>

    <!-- Your content goes here -->
    <div class="content">
      <img class="graph" src="<%= image %>" alt="image" width="100%" height="100%" />
    </div>

    <!-- footer -->
    <footer>
      <p>Page <%= pageNumber %> of <%= totalPages %></p>
    </footer>
  </body>
</html>
