<html>
  <%- include('../../include/header.ejs') %>
  <body>
    <%- include('../../include/navbar.ejs') %>
    <br />
    <br />
    <br />
    <br />

    <div class="is-flex is-justify-content-space-between">
      <h1 class="title ml-6">Crear Retroalimentacion</h1>
      <a class="button is-primary mr-6 is-danger">Crear Retroalimentacion</a>
    </div>
    <section
      class="container is-flex is-align-items-center is-flex-direction-column"
    >
      <br />
      <h2 class="subtitle">Banco de preguntas</h2>

      <% let cantCualitativas = 0; %> <% for (var i = 0; i < preguntas.length;
      i++) { %> <% if (preguntas[i].tipoPregunta === 'Cualitativa') { %> <%
      cantCualitativas++; %>
      <div
        class="box PreguntaContainer is-flex is-justify-content-space-between"
      >
        <div class="">
          <label class="label" for="respuestaCualitativa"
            ><%= preguntas[i].contenido %></label
          >
          <p>Respuesta Abierta</p>
        </div>

        <div class="">
          <a
            class="button is-success mr-4"
            href="preguntas/<%= preguntas[i].idPregunta %>"
          >
            Editar
          </a>
          <button class="button is-danger">
            <span>Eliminar</span>
            <span class="icon is-small">
              <i class="fas fa-times"></i>
            </span>
          </button>
        </div>
      </div>
      <% } else { %>
      <div
        class="box preguntaContainer is-flex is-justify-content-space-between"
      >
        <div>
          <label class="label" for="respuestaCuantitativa"
            ><%= preguntas[i].contenido %></label
          >
          <p>Respuesta 1 a 5</p>
        </div>

        <div class="">
          <a
            class="button is-success mr-4"
            href="preguntas/<%= preguntas[i].idPregunta %>"
          >
            Editar
          </a>
          <button class="button is-danger">
            <span>Eliminar</span>
            <span class="icon is-small">
              <i class="fas fa-times"></i>
            </span>
          </button>
        </div>
      </div>
      <%} %> <% } %>

      <div class="is-flex is-justify-content-center">
        <input
          class="button is-danger is-rounded is-medium"
          type="submit"
          value="Crear Retroalimentacion"
        />
      </div>
    </section>
  </body>
</html>

<style>
  .preguntaContainer {
    width: 70%;
  }
</style>
