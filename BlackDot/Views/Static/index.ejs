<html>
  <%- include('../include/header.ejs') %>

  <body>
    <%- include('../include/navbar.ejs') %>

    <!-- Hero -->
    <section class="hero is-medium is-bold">
      <div class="hero-body has-text-centered">
        <div class="container">
          <h1 class="title is-1">
            'CREANDO MARCAS <br />
            PARA EL FUTURO'
          </h1>

          <br />
          <button class="button is-success status-button">STATUS</button>

          <!-- red button
            <button class="button is-success status-button>STATUS</button>" -->
        </div>
      </div>
    </section>

    <section class="section">
      <!-- Graph  -->
      <% if (sprint.length > 0) { %>
      <div class="container is-fluid" style="z-index: 10">
        <div class="box has-background-black has-text-centered sprint-graph" style="height: 400px;">
          <div class="sprint-title ">
            <p class="subtitle is-2 has-text-white">Sprint</p>
            <br />
          </div>
          <canvas id="Sprints" style="width: 100%; height: calc(100% - 100px);"></canvas>
        </div>
      </div>
    
      <% } else { %>
        <div class="container">
          <div class="box has-background-black has-text-centered">
            <p class="subtitle is-4">No hay Sprints disponibles</p>
          </div>
        </div>
      <% } %>
    </section>
    
    

    <script src="/js/sprint.chart.js"></script>
  </body>
</html>

<!-- Styles -->
<style>
  /* Overriding Bulma CSS */
  .hero {
    background-image: url("../../assets/hero.png");
    background-size: cover;
    background-position: center;
    height: 500px;
  }

  .container {
    width: 100%;
  }

  .sprint-graph {
    margin-top: 30x;
    height: 600px !important;
  }

  .title {
    color: #ffffff;
  }

  .is-1 {
    font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
      "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
    font-size: 4.8893rem !important;
  }

  .status-button {
    border-radius: 52px;
    width: 300px;
    height: 60px;
    font-size: 1.5rem !important;
  }

  .button.is-success {
    background-color: #356959 !important;
  }

  @media screen and (max-width: 768px) {
    .is-1 {
      font-size: 2.5rem !important;
    }
  }
</style>
