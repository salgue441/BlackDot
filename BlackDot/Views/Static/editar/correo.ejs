<html>
  <%- include('../../include/header.ejs') %>

  <body>
    <%- include('../../include/navbar.ejs') %>

    <br />
    <br />
    <br />

    <h1 class="title is-1">Empleados</h1>
    <div class="container is-marginless mr-0">
      <div class="columns is-multiline">
        <div class="column is-three-quarters">
          <div class="columns is-multiline">
            <% for(let i = 0; i< empleados.length; i++){ %>
            <div class="column is-6">
              <div class="box boxEmpleado m-2 p-2 is-flex is-vcentered">
                <div
                  class="empleadoContainer is-flex is-vcentered is-justify-content-space-around"
                >
                  <img
                    src="<%= empleados[i].googleProfilePicture %>"
                    alt="Profile Picture"
                    class="image is-64x64 is-rounded profilePicture"
                  />
                  <div class="dataContainer">
                    <p>
                      <%= empleados[i].primerNombre + " " +
                      empleados[i].apellidoPaterno %>
                    </p>
                    <p><%= empleados[i].googleEmail %></p>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>

        <div class="column is-one-quarter">
          <section class="optionsContainer">
            <section>
              <div class="box boxAddEmail">
                <p>Agregar correo</p>
                <form
                  class="mt-3 is-flex is-flex-direction-column is-justify-content-space-evenly"
                >
                  <input
                    class="input"
                    type="text"
                    placeholder="Correo@zeb.mx"
                  />
                  <br />

                  <button
                    type="submit"
                    class="plusButton button is-primary is-rounded m-2"
                  >
                    <span class="icon">
                      <i class="fas fa-plus"></i>
                    </span>
                  </button>
                </form>
              </div>
            </section>
            <section class="mt-6">
              <!-- gestionar roles -->
              <div class="box boxAddEmail">
                <p>Gestionar roles</p>
                <form
                  class="mt-3 is-flex is-flex-direction-column is-justify-content-space-evenly"
                >
                  <!-- Select empleado -->
                  <div class="select">
                    <select>
                      <option>Selecciona un empleado</option>
                      <% for(let i = 0; i< empleados.length; i++){ %>
                      <option>
                        <%= empleados[i].primerNombre + " " +
                        empleados[i].apellidoPaterno %>
                      </option>
                      <% } %>

                      <!-- Select Rol -->
                      <div class="select">
                        <select>
                          <option>Selecciona un rol</option>
                          <% for(let i = 0; i< roles.length; i++){ %>
                          <option>
                            <%= roles[i].nombreRol %>
                          </option>
                          <% } %>
                        </select>
                    </select>
              </div>
            </section>
          </section>
        </div>
      </div>
    </div>
  </body>
</html>

<style>
  body {
    padding: 4rem;
  }

  .empleadoContainer {
    width: 100%;
  }

  .Container {
    width: 75%;
  }

  .boxEmpleado {
    height: 120px;
  }

  .mainContainer {
    width: 100%;
    height: 100vh;
    display: flex;
  }

  /* Set the styles for the first child div (two-thirds width) */
  .container .left {
    flex: 2;
  }

  .container .right {
    flex: 1;
  }

  .boxAddEmail {
    height: 15rem;
  }

  .plusButton {
    width: 50px;
    height: 50px;
    align-self: center;
  }
</style>
