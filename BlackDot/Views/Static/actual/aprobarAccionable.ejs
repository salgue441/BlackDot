<html>
    <%- include('../../include/header.ejs') %>

    <body>
        <%- include('../../include/navbar.ejs') %>

        <section class = "hero is-medium is-bold">
            <div class = "hero-body has-text-centered">
            <!-- Title & Button to Accept -->
                <div class="columns">
                    <div class="column is-half is-flex">
                        <h1 class = "title is-1">Accionables</h1>
                    </div>

                    <div class = "column is-half is-flex is-justify-content-end">
                        <div class="is-grouped is-grouped-centered">
                            <a class = "button is-danger reporte-button" href="#">
                                Aceptar
                            </a>
                        </div>
                    </div>
                </div>
                <!-- End of Title & Button -->

                <!-- Accionables -->
                <% let numAccionable = 0 %>
                <% for(var i = 0; i < accionables.length; i++) { %>
                <% if(accionables[i].nombreAccionable !== '') { %>
                    <% numAccionable++ %>
                    <div class="columns">
                        <div class="column is-11">
                            <div class="box is-black"> 
                                <div class="content">
                                    <p class="is-white">
                                        <%= accionables[i].nombreAccionable %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="column is-1">
                            <div class="box is-black">
                                <article class="media">
                                    <figure class="image is-64x64">
                                        <img src = "../../assets/approval.png">
                                    </figure>
                                </article>
                            </div>
                        </div>
                    </div>
                <% } %>
                <% } %>
            </div>
        </section>
    </body>
</html>

<style>
    /* Custom CSS by Yuna */
    .is-black {
        background-color: #232021 !important;
    }

    .is-white {
        color: #FFFFFF !important;
    }
</style>