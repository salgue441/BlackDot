<html>
  <%- include('../../include/header.ejs') %>

  <body>
    <%- include('../../include/navbar.ejs') %>

    <section class="hero is-medium is-bold">
      <div class="hero-body has-text-centered">
        <!-- Sprint title & Button -->
        <div class="columns">
          <div class="column is-half is-flex">
            <h1 class="title is-1">Sprint #1</h1>
          </div>

          <div class="column is-half is-flex is-justify-content-end">
            <div class="dropdown is-active">
              <button
                class="button is-danger"
                aria-haspopup="true"
                aria-controls="dropdown-menu"
              >
                <span>Seleccionar Sprint</span>
                <span class="icon is-small">
                  <img
                    src="../../../assets/Dropdown.png"
                    alt="Dropdown"
                    style="width: 10px; height: 10px; margin-left: 5px"
                  />
                </span>
              </button>

              <div class="is-grouped is-grouped-centered">
                <a
                  class="button is-danger reporte-button"
                  href="/static/actual/verRetroalimentacion"
                >
                  Generar Reporte
                </a>
              </div>
            </div>
          </div>
        </div>

        <br />

        <!-- Answers -->
        <div class="columns">
          <div class="column is-half">
            <% for (let i = 1; i < simplifiedQuantitative.length; i++) {%>
            <div class="columns">
              <div class="column is-flex">
                <div class="card custom-card">
                  <div class="card-content">
                    <div class="content">
                      <h1 class="title is-4">
                        <%= simplifiedQuantitative[i].Pregunta %>
                      </h1>

                      <canvas
                        class="has-background-grey-lighter graph-canvas"
                        id="graph-<%= simplifiedQuantitative[i].idPregunta %>"
                      ></canvas>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
        <!-- End of Answers -->
      </div>
    </section>

    <script src="/js/actualRetro.chart.js"></script>
  </body>
</html>

<style>
  /* Override Bulma CSS */
  .reporte-button {
    margin-left: 20px;
    width: 150px;
  }

  /* Custom CSS */
  .custom-card {
    width: 100%;
  }

  .graph-canvas {
    width: 100%;
  }
</style>
